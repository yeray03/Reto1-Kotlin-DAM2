<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Workout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:id="@+id/ivIcono"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_media_play"
        android:contentDescription="Icono de reproducciÃ³n"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/el_video_se_abrir_en_youtube"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnAbrirYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_video_en_youtube"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/volverVideo"
        android:padding="16dp"/>

</LinearLayout>